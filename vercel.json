{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/(.*).(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/produtos", "destination": "/produtos.html" },
    { "source": "/produto", "destination": "/produto.html" },
    { "source": "/sobre", "destination": "/sobre.html" },
    { "source": "/contato", "destination": "/contato.html" },
    { "source": "/blog", "destination": "/blog.html" },
    { "source": "/post", "destination": "/post.html" },
    { "source": "/admin", "destination": "/admin.html" }
  ]
}
